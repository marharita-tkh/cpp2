#include <iostream>
#include <cmath>
using namespace std; 

void convertToBinary (int a)
{
   if (a)
   {
      convertToBinary (a >> 1); 
      cout << (a & 1);
   }
}   
 
int main ()
{
   int a;
   cout <<"Введите десятичное число"<< endl;
   cin >> a;
   cout << "Двоичное = ";
   convertToBinary (a);
   return 0;
}
