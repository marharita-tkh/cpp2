  getline(cin, string1);
  cout « string1 « "\n";
  cout « "Input second string: ";
  getline(cin, string2);
  cout « string2 « "\n" ;
  int position = 0,
  positionLast = string2.rfind(string1),
  sizeOfString2 = string2.size();

  while (position != positionLast) {
    position = string2.find(string1, position);
