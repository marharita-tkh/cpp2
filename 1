                formatted1 += "\n";  
                formatted1 += tab1;
 
                if (i1+1<len1 && text1[i1+1] == ' ')    
                    ++i1;
            }
    }
 
    cout << formatted1;
    
    string text2 = "std::cout<<''Hello,World!''<<std::endl; return";
 
    int len2 = text2.length();
    string tab2 = "       ";
    string formatted2 = tab2;
    
    int i2 = -1;
    while (++i2 < len2)
    {   
        formatted2 += text2[i2];      
            if (text2[i2] == ' ')     
            {   
                formatted2 += "\n";  
                formatted2 += tab2;
 
                if (i2+1<len2 && text2[i+1] == ' ')    
                    ++i2;
            }
    }
 
    cout << formatted2;
    
     string text3 = "0; }";
 
    int len3 = text3.length();
