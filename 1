#include <iostream>
#include <sstream>
using namespace std;


int main()
{   
    
    string text = "#include<iostream>    int";
    int len = text.length();
    string tab = " ";
    string formatted = tab;
    
    int i = -1;
    while (++i < len)
    {   
        formatted += text[i];      
            if (text[i] == ' ')     
            {   
                formatted += "\n";  
                formatted += tab;
 
                if (i+1<len && text[i+1] == ' ')    
                    ++i;
            }
    }
    cout << formatted;
 
        
    string text1 = "main(){ ";
 
    int len1 = text1.length();
    string tab1 = " ";
